{
    "files.autoSave": "onFocusChange",
    "workbench.iconTheme": "catppuccin-mocha",
    "editor.fontFamily": "'CaskaydiaCove Nerd Font', 'Cascadia Mono', 'Source Han Sans CN', '微软雅黑', Consolas, 'Courier New', monospace",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "window.menuBarVisibility": "toggle",
    "editor.titleBar.enabled": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.fullScreen": false,
    "window.titleBarStyle": "native",
    "editor.cursorBlinking": "solid",
    "terminal.integrated.sendKeybindingsToShell": true,
    "catppuccin.italicKeywords": false,
    "workbench.colorTheme": "Catppuccin Mocha",
    "makefile.configureOnOpen": true,
    "workbench.navigationControl.enabled": false,
    "window.commandCenter": false,
    "window.customTitleBarVisibility": "never",
    "digital-ide.welcome.show": false,
    "digital-ide.prj.vivado.install.path": "~",
    "digital-ide.function.lsp.linter.verilog.diagnostor": "verilator",
    "github.copilot.nextEditSuggestions.enabled": true
